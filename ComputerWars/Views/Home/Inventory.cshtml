@model ComputerWars.Models.Player

@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inventory">
    <h2>@Model.Name's Inventory</h2>
    <p><span class="item">Processors:</span> @Model.Inventory["Processors"]</p>
    <p><span class="item">Graphics Cards:</span> @Model.Inventory["Graphics Cards"]</p>
    <p><span class="item">Hard Drives:</span> @Model.Inventory["Hard Drives"]</p>
    <p><span class="item">RAM Sticks:</span> @Model.Inventory["RAM Sticks"]</p>
    <p><span class="item">Flash Drives:</span> @Model.Inventory["Flash Drives"]</p>
</div>

<div class="return">
    <p>@Html.ActionLink("Return To Main Menu", "Menu", "Home")</p>
</div>